{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "CoOwner.Dev",
    "Key": "super-secret-change-this-very-long-256bit",
    "AudiencePublic": "public"
  },
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "groups": {
        "ClusterId": "contract-group",
        "Match": {
          "Path": "/groups/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/groups"
          }
        ]
      },
      "vehicles": {
        "ClusterId": "vehicle",
        "Match": {
          "Path": "/vehicles/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/vehicles"
          }
        ]
      },
      "bookings": {
        "ClusterId": "booking",
        "Match": {
          "Path": "/bookings/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/bookings"
          }
        ]
      },
      "finance": {
        "ClusterId": "finance",
        "Match": {
          "Path": "/finance/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/finance"
          }
        ]
      }
    },
    "Clusters": {
      "auth": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7441/"
          }
        }
      },
      "contract-group": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7442/"
          }
        }
      },
      "vehicle": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7443/"
          }
        }
      },
      "booking": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7444/"
          }
        }
      },
      "finance": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:7445/"
          }
        }
      }
    }
  },
  "RateLimit": {
    "FixedWindow": {
      "PermitLimit": 200,
      "WindowSeconds": 60
    }
  }
}
